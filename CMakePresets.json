{
    "version": 6,
    "configurePresets": [
        { "name": "ninja",       "hidden": true, "generator": "Ninja" },

        { "name": "release", "hidden": true, "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" } },
        { "name": "debug",   "hidden": true, "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" } },

        { "name": "clang",  "hidden": true, "cacheVariables": { "CMAKE_CXX_COMPILER": "clang++" } },
        { "name": "ccache", "hidden": true, "cacheVariables": { "CMAKE_CXX_COMPILER_LAUNCHER": "ccache" } },

        {
            "name": "dev",
            "description": "Recommended development configuration",
            "inherits": ["ninja", "clang", "ccache", "release"],
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "dev-debug",
            "description": "Recommended development configuration",
            "inherits": ["ninja", "clang", "ccache", "debug"],
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ]
}
